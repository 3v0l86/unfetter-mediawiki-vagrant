spec:
  x-sub-request-filters:
    - type: default
      name: http
      options:
        allow:
          - pattern: /^https?:\/\//
  title: The Change Propagation root
  paths:
    /sys/links:
      x-modules:
        - path: sys/backlinks.js
          options:
            templates:
              mw_api:
                  uri: 'http://localhost<%= scope['::port_fragment'] %>/w/api.php'
    /sys/queue:
      x-modules:
        - path: sys/kafka.js
          options:
            uri: 127.0.0.1:2181
            dc_name: datacenter1
            templates:
              summary_rerender:
                topic: resource_change
                match:
                  meta:
                    uri: '/^https?:\/\/[^\/]+\/api\/rest_v1\/page\/html\/([^\/]+)$/'
                  tags:
                    - restbase
                exec:
                  method: get
                  # Don't encode title since it should be already encoded
                  uri: '<%= @restbase_uri %>/{{message.meta.domain}}/v1/page/summary/{{match.meta.uri[1]}}'
                  query:
                    redirect: false
                  headers:
                    cache-control: no-cache

