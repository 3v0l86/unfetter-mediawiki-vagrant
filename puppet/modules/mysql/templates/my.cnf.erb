# MySQL client configuration.
# This file is managed by Puppet.
#
[client]
user = "root"
password = "<%= @password %>"

[mysql]
pager = "less -inSFX"
prompt = "(\R:\m)\_\u@\h:[\d]>\_"

<% if @dbname %>
database = "<%= @dbname %>"
<% end %>
comments = true
show-warnings = true
default-character-set = utf8
